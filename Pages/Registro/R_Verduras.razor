@page "/Verdura"
@page "/Verdura /{VerdurasId:int}"
@inject VerdurasBLL VerdurasBLL

<EditForm Model="verdura">
    <DataAnnotationsValidator />

    <div class="card border-info mb-3" style="max-width: 100rem;">

        <div class="card text-dark bg-light mb-3 shadow-lg">

            <h2 class="card-header">Registro Verduras</h2>

            <div class="card-body">

                <div class="row justify-content-between">

                    <div class="col-3">
                        <label>Verdura Id</label>
                        <div class="input-group mb-3">
                            <input type="number" class="form-control" aria-label="Recipient's username"
                                aria-describedby="basic-addon2">
                            <button class="btn btn-outline-primary" type="button"><i class="oi oi-magnifying-glass" />
                            </button>
                        </div>
                    </div>

                    <div class="col-3">
                        <label>Fecha de Creacion</label>
                        <input type="date" class="form-control" aria-label="Recipient's username"
                            aria-describedby="basic-addon2">
                    </div>
                </div>


                @*Nombres de las verduras*@
                <label>Nombre de la Verdura</label>
                <div class="input-group input-group-lg">
                    <input type="text" class="form-control" aria-label="Sizing example input"
                        aria-describedby="inputGroup-sizing-lg">
                </div>
            </div>

            @* VERDURAS DETALLE *@
            <fieldset class="border-success">
                <div class="card-body">
                    <div class="row justify">

                        @* Vitamina Id *@
                        <div class="col-2">
                            <label>Vitaminas</label>
                            <div class="btn-group me-2" role="group" aria-label="Second group">
                                <input type="text" class="form-control" placeholder="Seleccione"
                                    aria-label="Recipient's username" aria-describedby="basic-addon2">
                            </div>
                        </div>
                        @* Descripcion *@
                        <div class="col-2">
                            <label>Descripcion</label>
                            <input type="text" class="form-control" aria-label="Recipient's username"
                                aria-describedby="basic-addon2">
                        </div>
                        @* Cantidad *@
                        <div class="col-2">
                            <label>Cantidad</label>
                            <input type="number" class="form-control" aria-label="Recipient's username"
                                aria-describedby="basic-addon2">
                        </div>
                        @*Boton de agregar detalle*@
                        <div class="col-2">
                            <button type="button" class="btn btn-outline-primary input-group-text mt-4">
                                <span class="oi oi-plus"> Agregar </span>
                            </button>
                        </div>
                    </div>
                </div>

            </fieldset>


            @* Tabla de detalles *@
            <hr />
            <div class="card-body">
                <table class="table table-bordered table-light">
                    <thead class="thead">
                        <tr class="table">
                            <th>Vitamina Id</th>
                            <th>Descripcion</th>
                            <th>Cantidad</th>
                            <th>Unidad de medida</th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
                <hr />
                @*Observaciones*@
                <div class="form-floating">
                    <textarea type="text" class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
                        style="height: 100px"></textarea>
                    <label for="floatingTextarea2">Observaciones</label>
                </div>
                <div class="card-footer d-flex justify-content-center">
                    <div class="d-grid gap-2 d-md-block">
                        <button type="button" class="btn btn-outline-primary"> <i class="oi oi-file" /> Nuevo</button>
                        <button type="submit" class="btn btn-outline-success"> <i class="oi oi-document" />
                            Guardar</button>
                        <button type="button" class="btn btn-outline-danger"><i class="oi oi-trash" /> Eliminar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</EditForm>

@code
{
    public Verduras verdura { get; set; } = new Verduras();
}